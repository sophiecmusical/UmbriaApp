<resources>

    <!-- Base application theme using MaterialComponents for modern UI elements -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>

        <!-- Configuring the status bar and system UI -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

        <!-- Add additional Material design elements if necessary -->
    </style>

    <!-- Theme without action bar, useful for full-screen activities -->
    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>

        <!-- Add additional configurations as needed -->
    </style>

    <!-- Example of a custom theme overlay for preferences -->
    <style name="PreferenceThemeOverlay" parent="ThemeOverlay.MaterialComponents">
        <!-- Customize preferences theme if using PreferenceActivity or PreferenceFragment -->
    </style>

</resources>